{
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "friendsofphp/php-cs-fixer": "^2.13"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "scripts": {
        "fix": [
            "vendor/bin/php-cs-fixer fix src -q",
            "vendor/bin/php-cs-fixer fix tests -q",
            "vendor/bin/phpunit"
        ]
    }
}
